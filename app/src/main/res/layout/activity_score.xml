<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#D09CFA"
    tools:context=".ScoreActivity">

    <TextView
        android:id="@+id/score_user"
        android:layout_width="wrap_content"
        android:layout_margin="20dp"
        android:textSize="28sp"
        android:fontFamily="@font/alex_brush"
        android:shadowColor="#F675A8"
        android:shadowRadius="10"
        android:foregroundGravity="center"
        android:textColor="#554994"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:hint="Congrats, User"/>

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/score_vid"
        app:lottie_rawRes="@raw/congratulation"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="High Score"
        android:textStyle="bold"
        android:textColor="#0EA293"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/high_score"

        android:layout_gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#E64848"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


    <TextView
        android:text="Your Previous Score"
        android:layout_width="wrap_content"
        android:layout_margin="20dp"
        android:textColor="#19376D"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/previous_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textStyle="bold"
        android:textColor="#E64848"
        android:layout_gravity="center"
        android:textSize="20sp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to home"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:id="@+id/score_to_home"/>






</LinearLayout>